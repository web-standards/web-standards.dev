{% from 'news-card.njk' import newsCard %}

<div class="archive">
	<h1 class="archive__title">News with the “{{ tag }}” tag</h1>
	<ul class="news-list">
	{%- for item in collections[tag] | reverse %}
		{%- if isDev or not item.data.draft %}
		<li>
			{{ newsCard(news=item, fetchpriority='high' if loop.index <= 4 else '') }}
		</li>
		{%- endif %}
	{%- endfor %}
	</ul>
</div>
