{% from 'cover.njk' import cover %}

{% set coverSizes = '(min-width: 1232px) 288px, (min-width: 928px) calc(33.3vw - 4rem), (min-width: 624px) calc(50vw - 3rem), calc(100vw - 2rem)' %}

{% macro newsCard(news, fetchpriority='') %}
	<article
		class="news-card"
		{{ 'data-draft' if news.data.draft else '' }}
	>
		{{ cover(
			url=news.url,
			sizes=coverSizes,
			fetchpriority=fetchpriority,
			alt=news.data.alt
		) }}
		<time datetime="{{ news.date | dateISO }}">
			{{- news.date | dateShort -}}
		</time>
		<h2>
			<a href="{{ news.url }}">
				{{- news.data.title | markdownInline | safe -}}
			</a>
		</h2>
	</article>
{% endmacro %}
