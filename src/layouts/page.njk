{% set pageTitle = (title + ' â€” ' if title else '') + meta.title %}
{% set pageDescription = description if description else meta.subtitle %}
{% set pageURL = meta.domain + page.url %}
{% set pageCover = meta.domain + (page.url + 'cover.jpeg' if page.url.startsWith('/news/') else '/images/cover.png') %}
{% set pageCoverAlt = alt if alt else meta.title + '. ' + meta.subtitle + '.' %}

<!DOCTYPE html>
<html class="page" lang="{{ meta.language }}">
<head>
	<meta charset="utf-8">
	<title>{{ pageTitle | plainText | safe }}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="stylesheet" href="/styles/index.css">

	<!-- Text -->
	<link rel="preload" href="/fonts/dewi/regular/latin.woff2" crossorigin as="font" type="font/woff2">
	<!-- Card headings -->
	<link rel="preload" href="/fonts/dewi/expanded-regular/latin.woff2" crossorigin as="font" type="font/woff2">
	<!-- Logo -->
	<link rel="preload" href="/fonts/dewi/extra-expanded-black/latin.woff2" crossorigin as="font" type="font/woff2">
{% if page.url != '/' %}
	<!-- News headings -->
	<link rel="preload" href="/fonts/dewi/expanded-black/latin.woff2" crossorigin as="font" type="font/woff2">
	<!-- Code -->
	<link rel="preload" href="/fonts/jetbrains-mono/regular/latin.woff2" crossorigin as="font" type="font/woff2">
{% endif %}

	<link rel="canonical" href="{{ pageURL }}">
	<link rel="me" href="https://mastodon.social/@webstandards_dev">
	<meta name="fediverse:creator" content="@webstandards_dev@mastodon.social">

	<meta name="description" content="{{ pageDescription | plainText | safe }}">
	<meta name="generator" content="{{ eleventy.generator }}">

	<meta property="og:type" content="website">
	<meta property="og:title" content="{{ pageTitle | plainText | safe }}">
	<meta property="og:description" content="{{ pageDescription | plainText | safe }}">
	<meta property="og:url" content="{{ pageURL }}">

	<meta property="og:image" content="{{ pageCover }}">
	<meta property="og:image:width" content="1920">
	<meta property="og:image:height" content="1080">
	<meta property="og:image:alt" content="{{ pageCoverAlt | plainText | safe }}">

	<link rel="alternate" type="application/atom+xml" href="{{ meta.domain }}/feed/" title="{{ meta.title }}">

	<script type="module" src="/scripts/index.js" defer></script>
</head>
<body class="page__body">
	{% include 'header.njk' %}

	<main class="main">
		{{ content | safe }}
	</main>

	{% include 'footer.njk' %}
</body>
</html>
